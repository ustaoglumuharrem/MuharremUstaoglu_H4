<Window x:Class="HW3.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW3"
        mc:Ignorable="d"
         Title="CourseWindow" Height="450" Width="400" Loaded="Course_Loaded">
    <StackPanel Margin="10">
       
        <Label Content="CourseCode"/>
        <TextBox Text="" TextWrapping="Wrap" Name="txtCourseCode" Width="400"/>
        <Label Content="CourseQuota"/>
        <TextBox Text="" TextWrapping="Wrap" Name="txtCourseQuota" Width="400"/>
        <Label Content="CourseCredit"/>
        <TextBox Text="" TextWrapping="Wrap" Name="txtCourseCredit" Width="400"/>


        <Button Content="Insert" Name="btnsave" Click="btnsave_Click" Width="300" Height="25" Margin="0,15,0,15" Background="#FF3BBD1A"/>
        <Button Content="Delete" Name="btndelete" Click="btndelete_Click" Width="300" Height="25" Margin="0,0,0,15" Background="#FFC31010"/>
        <Button Content="Update" Name="btnupdate" Click="btnupdate_Click" Width="300" Height="25" Margin="0,0,0,15" Background="#FF1A6AD0"/>

        <DataGrid x:Name="dgCourse" Height="311" SelectedCellsChanged="dgCourse_SelectedCellsChanged" Width="400"/>

    </StackPanel>
        
</Window>
